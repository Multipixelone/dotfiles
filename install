# Install Script for all my junk
# Made with <3 by Multipixelone
# Set all Variables
INSTALL_PKGS="texlive lmodern pandoc xcb-proto libjpeg-turbo8-dev libpam0g-dev libxcb-composite0 libxcb-composite0-dev libxcb-image0-dev libxcb-randr0 libxcb-util-dev libxcb-xinerama0 libxcb-xinerama0-dev libxcb-xkb-dev libxkbcommon-x11-dev feh libev-dev bc zsh i3blocks i3lock i3lock-fancy i3status cmake grip surf help2man terminator intltool perl lxpolkit libasound2-dev libglib2.0-dev libgtk-3-dev lxappearance gtk-chtheme qt4-qtconfig stow plymouth-themes arc-theme guake unzip dictd git firefox dict-gcide python3 python3-pip steam gimp filezilla audacity gparted gdebi-core vlc autoconf keepass2 automake vim sudo"
# HAPPY GREETING
echo "Multipixelone Dotfiles i3wm Installer"
echo "MAKE SURE YOU ARE RUNNING AS ROOT"
sleep 2s

# Gotta have Root
#if (( $EUID != 0 )); then
#    echo "Please run as root"
#    exit
#fi

# Display install message
[ -r /etc/lsb-release ] && . /etc/lsb-release

if [ -z "$DISTRIB_DESCRIPTION" ] && [ -x /usr/bin/lsb_release ]; then
        # Fall back to using the very slow lsb_release utility
        DISTRIB_DESCRIPTION=$(lsb_release -s -d)
fi

echo
printf "Installing on: %s (%s %s %s)\n" "$DISTRIB_DESCRIPTION" "$(uname -o)" "$(uname -r)" "$(uname -m)"
sleep 2s

# Check for package managers
command -v apt-get >/dev/null 2>&1 || { echo >&2 "apt-get isn't installed. Aborting"; exit 1; }
command -v snap >/dev/null 2>&1 || { apt install snapd; }

# Install all updates first
apt-get --yes update && apt-get --yes upgrade

# Install All Applications
for i in $INSTALL_PKGS; do
  sudo apt-get install -y $i
done

exit 0

# Install setuptools
sudo pip3 install setuptools

# Install powerline for vim
sudo pip3 install powerline-status

# Setup pywal
sudo pip3 install pywal

# Setup Steam Wal
sudo pip3 install wal-steam

# YouCompleteMe
# cd ~/.vim/plugged/YouCompleteMe
# ./install.py --clang-completer

# Setup Downloads
mkdir -p ~/Downloads
cd ~/Downloads

# Install Discord
#wget "https://dl.discordapp.net/apps/linux/0.0.5/discord-0.0.5.deb" -O discord.deb
#gdebi -nq discord.deb
snap install discord

# Add Deepin, for the terminal!
#sudo add-apt-repository ppa:leaeasy/dde
#apt install -y deepin-terminal

# Oh-My-Zsh!
sh -c "$(wget https://raw.github.com/robbyrussell/oh-my-zsh/master/tools/install.sh -O -)"

# `light` for light control
mkdir -p ~/Github
cd ~/Github
git clone https://github.com/haikarainen/light.git
cd light
make
sudo make install

# Volumeicon for the volume control
mkdir -p ~/Github
cd ~/Github
git clone https://github.com/Maato/volumeicon.git
cd volumeicon
./autogen.sh
./configure --prefix=/usr
make
sudo make install

# Install GPMDP
#wget "https://github.com/MarshallOfSound/Google-Play-Music-Desktop-Player-UNOFFICIAL-/releases/download/v4.5.0/google-play-music-desktop-player_4.5.0_amd64.deb" -O GPMDP.deb
#gdebi -nq GPMDP.deb
snap install google-play-music-desktop-player

# Build st (Simple Terminal)
#cd ~/Github
