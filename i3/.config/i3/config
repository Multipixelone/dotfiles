# Set restart, shutdown, and locking stuff (From Manjaro)
bindsym $mod+0 mode "$mode_system"
set $mode_system (l)ock, (s)uspend (e)xit, (r)eboot, (Shift+s)hutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    #bindsym e exec --no-startup-id i3-exit --logout, mode "default"
    bindsym e exec --no-startup-id i3-msg exit
    bindsym s exec --no-startup-id systemctl suspend && $Locker, mode "default"
    bindsym r exec --no-startup-id reboot, mode "default"
    bindsym Shift+s exec --no-startup-id shutdown now, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Lock and suspend
bindsym $mod+l exec mantablockscreen -cc #systemctl suspend 

